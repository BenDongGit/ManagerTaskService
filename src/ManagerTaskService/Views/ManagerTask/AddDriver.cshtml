@model ManagerTask.Data.Driver
@{
    ViewBag.Title = "Add Driver";
}

@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}

@if (ViewBag.Success != null)
{
    <p class="text-info">@ViewBag.Success</p>
}
@using (Html.BeginForm("AddDriver", "ManagerTask", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2 control-label">Driver Name</label>
        <div class="col-md-3">
            <input class="form-control" data-val="true" data-val-required="The Name field is required." id="driver" name="driver" type="text" value="" required>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Date Joined Company</label>
        <div class="col-md-3">
            <div class='input-group date ' id='datepicker'>
                <input type='text' class="form-control" data-val="true" data-val-required="The Name field is required." id="dateJoinedCompany" name="dateJoinedCompany" required/>
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary"><strong class="glyphicon-plus"></strong> Add</button>
        </div>
    </div>
}
<script type="text/javascript">
    var date = new Date().toLocaleString();
    $(function () {
        $('#datepicker').datetimepicker({
            defaultDate: date,
            format: 'YYYY/MM/DD HH:mm:ss'
        });
    });
</script>
