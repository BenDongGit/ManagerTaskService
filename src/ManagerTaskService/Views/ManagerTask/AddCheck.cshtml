@model ManagerTask.Data.Driver
@{
    ViewBag.Title = "Add Check";
}
@if (ViewBag.Error != null)
{
    <p class="text-danger">@ViewBag.Error</p>
}

@if (ViewBag.Success != null)
{
    <p class="text-info">@ViewBag.Success</p>
}

@using (Html.BeginForm("AddCheck", "ManagerTask", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2 control-label">Driver</label>
        <div class="col-md-3">
            <input class="form-control" data-val="true" data-val-required="The Name field is required." id="driver" name="driver" type="text" value="" required>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Check Type</label>
        <div class="col-md-3">
            <select class="form-control" data-val="true" id="type" name="type">
                <option value="1">License</option>
                <option value="2">PhotocardExpired</option>
                <option value="3">ValidId</option>
                <option value="4">TrainingCompleted</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Success</label>
        <div class="col-md-3">
            <select class="form-control" data-val="true" id="success" name="success">
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Date</label>
        <div class="col-md-3">
            <div class='input-group date ' id='datepicker'>
                <input type='text' class="form-control" data-val="true" data-val-required="The Name field is required." id="date" name="date" required />
                <span class="input-group-addon">
                    <span class="glyphicon glyphicon-calendar"></span>
                </span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary"><strong class="glyphicon-plus"></strong> Add</button>
        </div>
    </div>
}

<script type="text/javascript">
    var date = new Date().toDateString();
    $(function () {
        $('#datepicker').datetimepicker({
            defaultDate: date,
            format: 'YYYY/MM/DD HH:mm:ss'
        });
    });
</script>
